---
<Layout title={frontmatter.title}>
    <main dir="ltr" class="pt-8 pb-16 lg:pt-16 lg:pb-24">
        <div class="flex items-start justify-between gap-5 px-4 mx-auto max-w-6xl">
            <div class="md:w-3/12 rounded-3xl h-auto bg-white shadow-sm px-5 py-5">
                {
                    categories.map((cat:any) => {
                      return (
                      <div class="">
                   <div id="accordion-collapse" data-accordion="collapse" class=""> 
                    <h2 id={cat.name}>
                      <button type="button" class="flex items-center justify-between w-full font-medium 
                      text-left text-gray-500" 
                      data-accordion-target={`#${frontmatter.slug}`} aria-expanded="false" 
                      aria-controls={frontmatter.slug}>
                        <span class="text-sm text-slate-700">{cat.name}</span>
                        <Icon name="ic:baseline-arrow-circle-down" 
                        class={`text-slate-700 w-6 h-6 shrink-0`} />
                      </button>
                    </h2>                
                    {
                      cat.posts.map((post:any) => {
                        return(
                        <div id={frontmatter.slug} class="hidden" aria-labelledby={cat.name}>
                      <div class="font-light">  
                        <ul class="text-gray-500 list-none">
                                <li >
                                <a href={post.frontmatter.slug} class="hover:underline text-slate-700 no-underline text-sm font-light">{post.frontmatter.title}</a>
                                </li>
                            </ul>
                      </div>
                   </div>
                        )
                      })
                    } 
                </div>
                    </div>
                      )
                    })
                  }

            </div>
            <article class="px-9 py-5 format format-sm sm:format-base lg:format-lg format-blue bg-white shadow-sm rounded-3xl md:w-9/12">
                <BreadCumbs category={frontmatter}/>
                <header class="mb-4 lg:mb-6 not-format">
                    <address class="flex items-center mb-6 not-italic">
                        <div class="inline-flex items-center mr-3 text-sm text-gray-900">
                            <img
                            class="mr-4 w-16 h-16 rounded-full ring-2 ring-slate-200"
                            src={`${frontmatter.thumbnail ? frontmatter.thumbnail :"/assets/light-3.jpg" }`}
                            alt="profile"
                        />
                            <div>
                                <a href="#" rel="author" class="text-xl font-bold text-gray-900 no-underline capitalize">{frontmatter.author}</a>
                                <p class="text-base font-light text-gray-500">
                                    Graphic Designer & CEO Flowbite</p>
                                <p class="text-base font-light text-gray-500"><time datetime="2022-02-08" title="February 8th, 2022">{frontmatter.date}</time></p>
                            </div>
                        </div>
                    </address>

                    <h3 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl">{frontmatter.title}</h3>
                </header>
                <Content />           
            </article>
        </div>
      </main>  
<Footer />
</Layout>