---
import i18next from "i18next";
import { Icon } from 'astro-icon';
export async function getStaticPaths() {
    const posts = await Astro.glob('./posts/**/*.{md,mdx}');
    return posts?.map((post:any)=> ({
        params: {
            slug: post.frontmatter.slug,
        },
    }));
}
const {category} = Astro.props;
const homeUrl = i18next.language === 'ar'? '/ar/' : '/';
---
<nav class="flex ltr:-ml-5 rtl:-mr-5 mb-0" aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-4 list-none">
      <li>
        <div>
          <a href={`${homeUrl}`} class="text-gray-400 hover:text-gray-500 ">
            <span class="text-sm font-fMedium text-blue-600 hover:text-gray-500">Help</span>
          </a>
        </div>
      </li>
      <li>
        <div class="flex items-center">
            <Icon name="ic:twotone-chevron-right" class="flex-shrink-0 h-5 w-5 text-gray-400 rtl:mr-3" />
          <a href={`${homeUrl}`} class="mx-4 text-sm font-fMedium text-gray-500 hover:text-blue-600">{category.category}</a>
        </div>
      </li>
  
      <li>
        <div class="flex items-center">
            <Icon name="ic:twotone-chevron-right" class="flex-shrink-0 h-5 w-5 text-gray-400" />
          <a href={`${homeUrl}${category.slug}`} class="mx-4 text-sm font-fMedium text-gray-500 hover:text-blue-600" aria-current="page">{category.title}</a>
        </div>
      </li>
    </ol>
  </nav>