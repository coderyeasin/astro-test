---
import { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
// import { Image } from '@astrojs/image/components';
// import twitter from '/assets/icon-twitter.svg';
// import linkedin from '/assets/icon-linkedin.svg';
// import googlePlay from '/assets/img-googlePlay.svg';
// import appStore from '/assets/img-appStore.svg';
---
<section class="bg-slate-400">
    <div class="py-5 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
        <div class="w-3/12 space-y-5">
            <h3 class="font-semibold text-white">{t("FOOTER.JOIN")}</h3>
            <div class="flex items-center gap-3">
                <!-- <Image class="rounded-md" src={googlePlay} width={150} height={37} alt="googlePlay" />
                <Image class="rounded-md" src={appStore} width={150} height={37} alt="appStore" /> -->
                <img
				src={`/assets/img-googlePlay.svg`}
				alt="googlePlay"
				loading="lazy"
				decoding="async"
				width={150}
				height={37}
			/>
                <img
				src={`/assets/img-appStore.svg`}
				alt="appStore"
				loading="lazy"
				decoding="async"
				width={150}
				height={37}
			/>
            </div>
            <div class="flex items-center gap-3">
                <a class="text-white no-underline text-sm font-light" href="#">{t("FOOTER.TERMS")}</a>
                <a class="text-white no-underline text-sm font-light" href="#">{t("FOOTER.PRIVACY")}</a>
            </div>
        </div>
        <div class="w-3/12 space-y-3">
            <div class="mb-3">
                <LanguageSelector showFlag={false} class="languages p-1 text-sm px-3 border-b-2 text-white border-white font-light bg-inherit active:text-black w-full" />
            </div>
        <a class="text-white no-underline text-sm font-light" href="#">{t("FOOTER.CONTACT")}</a> <br>
        <a class="text-white no-underline text-sm font-light" href="#">{t("FOOTER.HELP")}</a>
        <div class="flex gap-3">
            <!-- <Image src={twitter} width={15} height={15} alt="twitter" />
            <Image src={linkedin} width={15} height={15} alt="linkedin" /> -->
            <img
            src={`/assets/icon-twitter.svg`}
            alt="twitter"
            loading="lazy"
            decoding="async"
            width={15}
            height={15}
        />
            <img
            src={`/assets/icon-linkedin.svg`}
            alt="linkedin"
            loading="lazy"
            decoding="async"
            width={15}
            height={15}
        />
        </div>
        </div>
    </div>
</section>