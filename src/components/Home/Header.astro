---
import { Icon } from 'astro-icon';
import i18next,{t, changeLanguage,  } from "i18next";
import { Trans, LanguageSelector } from "astro-i18next/components";

const homeUrl = i18next.language === 'ar'? '/ar/' : '/';
const pathUrl = i18next.language === 'en'? '/ar/' : '/';

const navs = [
	{ name: t("NAV.FEATURES"), url: homeUrl},
	{ name: t("NAV.SPEND"), url: "#" },
	{ name: t("NAV.SEND"), url: "#" },
	{ name: t("NAV.SAVE"), url: "#" },
	{ name: t("NAV.HELP"), url: "#" },
	{ name: t("NAV.LANG"), url: pathUrl },
];

---
<header>
<nav class="px-2 sm:px-4 py-2.5 fixed w-full z-20 top-0 left-0 bg-bgPrimary backdrop-blur-sm">
	<div class="container flex flex-wrap items-center justify-between mx-auto relative">
			<div class="flex items-center gap-2">
				<a class="flex items-center tex-sm text-slate-700 font-medium no-underline" href={homeUrl}>
					<img
					src={`/assets/logov.svg`}
					alt="logo"
					loading="lazy"
					decoding="async"
					width={32}
					height={10}
				/>
				</a>
				<h3 class="text-2xl text-white">tweeq</h3>
			</div>
			<button data-collapse-toggle="navbar-sticky" type="button" 
			class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg md:hidden
			hover:bg-gray-100 focus:outline-none ring-2 ring-gray-200" 
			aria-controls="navbar-sticky" aria-expanded="false" >
				<span class="sr-only">Open main menu</span>
				<Icon name="mdi:hamburger-menu" id="icon" class="w-6 text-white hover:text-green-600 cursor-pointer" />  
			</button>
		 <div class="w-full flex items-center gap-5 md:w-auto ">
		  <div class="hidden w-full md:flex md:w-auto bg-gray-50 rounded-lg md:bg-transparent md:rounded-none" id="navbar-sticky">
			<ul class="list-none flex flex-col md:bg-transparent
					md:flex md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium" id="menuItem">
			{
				navs.map((nav)=> { return(				
					<li >
						<a href={nav.url} class="text-blue-600 md:text-white block md:flex py-2 pl-3 pr-4 rounded bg-transparent md:p-0">{nav.name}</a>
					</li>
					)
				})
			}
			</ul>
		 </div>
			<button class="bg-bgButton md:py-3 md:px-6 sm:py-2 md:static absolute top-1 z-40 right-12 sm:px-6 sm:min-w-fit py-2 px-3 min-w-fit rounded-full text-white">Get the app</button>				
	  </div>
	</div>
  </nav>
</header>
<script is:inline>
	window.addEventListener('scroll', function () {
		const header = document.querySelector('nav');
		const logoText = document.querySelector('h3');
		const iconText = document.querySelector('button').querySelector('svg');
		const menuItem = document.getElementById('menuItem').querySelectorAll('li a');

		if (window.scrollY >= 70) {
			header.className = 'px-2 sm:px-4 py-2.5 fixed w-full z-20 top-0 left-0 backdrop-blur-sm bg-[#fff]';
			logoText.className = 'text-textPrimary';
			menuItem.forEach((nav)=>{
				nav.className='block text-blue-600 md:text-[#2F2F2F] md:flex py-2 pl-3 pr-4 rounded bg-transparent md:p-0';
			});
			iconText.classList.add('iconText')
			// className = 'w-6 text-white hover:text-green-600 cursor-pointer';
		}else{
			header.className = 'px-2 sm:px-4 py-2.5 fixed w-full z-20 top-0 left-0 bg-bgPrimary backdrop-blur-sm';
			logoText.className = 'text-white';
			menuItem.forEach((nav)=>{
				nav.className='block text-blue-600 md:text-white md:flex py-2 pl-3 pr-4 rounded bg-transparent md:p-0';
			});
			// iconText.className = 'w-6 text-white hover:text-green-600 cursor-pointer';
			iconText.classList.remove('iconText')
		}
	})
</script>
<style>
	.iconText{
		color: #156FFF !important;
	}

</style>