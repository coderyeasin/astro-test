---
import '../styles/main.css'
import i18next, { t } from "i18next";

export interface Props {
	title: string;
}

const { title } = Astro.props;

// const algoId = process.env.ASTRO_ALGOLIA_APP_ID;
// const algoKey = process.env.ASTRO_ALGOLIA_API_KEY;
// const netlifyId = process.env.ASTRO_NETLIFY_SITE_ID;
// const gitBranch = process.env.ASTRO_TARGET_GIT_BRANCH;


---

<!DOCTYPE html>
<html lang={i18next.language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@algolia/algoliasearch-netlify-frontend@1/dist/algoliasearchNetlify.css" />
	</head>
	<body>
		<slot />
		
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@algolia/algoliasearch-netlify-frontend@1/dist/algoliasearchNetlify.js"></script>
		<script type="text/javascript">
		algoliasearchNetlify({
			appId: process.env.ASTRO_ALGOLIA_APP_ID,
			apiKey: process.env.ASTRO_ALGOLIA_API_KEY,
			siteId: process.env.ASTRO_NETLIFY_SITE_ID,
			branch: process.env.ASTRO_TARGET_GIT_BRANCH,
			selector: 'div#search',
		});
</script>
	</body>
</html>

